@model MVC.CRUD.Interface.Models.Entities.Client

@{
    ViewData["Title"] = "Delete";
}

<h4>Are you sure you want to delete this client?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Name:
    </dt>
    <dd class="col-sm-10">
        @(string.IsNullOrEmpty(Model.Name) ? "-" : Model.Name)
    </dd>
    <dt class="col-sm-2">
        Platform:
    </dt>
    <dd class="col-sm-10">
        @(string.IsNullOrEmpty(Model.Platform) ? "-" : Model.Platform)
    </dd>
    <dt class="col-sm-2">
        Region:
    </dt>
    <dd class="col-sm-10">
        @(string.IsNullOrEmpty(Model.Region) ? "-" : Model.Region)
    </dd>
    <dt class="col-sm-2">
        Package:
    </dt>
    <dd class="col-sm-10">
        @(string.IsNullOrEmpty(Model.Package) ? "-" : Model.Package)
    </dd>
    <dt class="col-sm-2">
        Active:
    </dt>
    <dd class="col-sm-10">
        @((Model.Active) ? "Yes" : "No")
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-secondary" data-dismiss="modal">Cancel</a>
</form>